        {# <p>Dummy Heading</p> #}
{#        {{ menuItem.open ? 'data-opened="opened"' : null }}#}
        {% for key, menuItem in menus %}
            {% set menuId = 'menu-' ~ key %}
            <li class="{{ menuItem.active ? 'active' : null }}">
                <a href="{{ menuItem.subMenu ? '#' ~ menuId : menuItem.url }}"
                    {{ menuItem.subMenu ? 'data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"' : null }}
                    {{ menuItem.open ? 'data-opened="opened"' }}
                    >
{#                    style="{{ menuItem.open ? 'background: #ffc107 !important' : null }}"#}
                   {{ menuItem.title }}
                </a>
                {% if menuItem.subMenu %}
                    {% for subMenu in menuItem.subMenu %}
                        <ul class="collapse list-unstyled" id="{{ menuId }}">
                            <li class="{{ subMenu.active ? 'active' : null }}">
                                <a href="{{ subMenu.url }}" class="nav-link ">{{ subMenu.title }}</a>
                            </li>
                        </ul>
                    {% endfor %}
                {% endif %}
            </li>
        {% endfor %}

