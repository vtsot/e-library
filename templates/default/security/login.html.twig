{% extends 'layout.main.html.twig' %}


{% block breadcrumbs %}
    {% set breadcrumbs = [
        {'url': path('login'), 'title': 'Login', 'active': true},
    ] %}
    {{ parent() }}
{% endblock %}


{% block content %}
    <div class="widget">
        <div class="widget-header">
            <div class="logo"></div>
        </div>
        <div class="widget-body">
            <h3> {{ 'TITLE'|trans({}, 'security') }}</h3>
            {% if error is defined and error is not null %}
                <div class="alert alert-danger" role="alert">
                    {{ error.message|trans(error.messageData, 'security') | raw }}
                </div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">

                <div class="form-group">
                    <input type="text" id="username" name="_username" placeholder="Username"
                           class="form-control"
                           value="{{ last_username is defined ? last_username : '' }}" autofocus>
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="_password" placeholder="Password" class="form-control">
                </div>



                 <br/>
                <button type="submit" class="btn btn-primary">{{ 'LOGIN'|trans({}, 'security') }}</button>
            </form>
        </div>
    </div>
{% endblock %}
